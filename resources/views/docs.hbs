<div class="relative w-full">
  <div class="container relative flex w-full px-4 mx-auto sm:px-6 lg:px-8">
    <div class="flex-none w-full lg:grid lg:grid-cols-4 lg:gap-8">
      <div class="border-r border-coolGray-100">
        <div class="relative py-16 lg:pl-8">
          <div class="relative inline-block mb-8" x-data="{ open: false }">
            <div @mouseenter="open = true">
              <button type="button"
                class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 border rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-indigo-500"
                id="menu-button" aria-expanded="true" aria-haspopup="true">
                {{currentVersion}}
                <!-- Heroicon name: solid/chevron-down -->
                <svg class="w-5 h-5 ml-2 -mr-1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
                  fill="currentColor" aria-hidden="true">
                  <path fill-rule="evenodd"
                    d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                    clip-rule="evenodd" />
                </svg>
              </button>
            </div>

            <div x-show="open" @mouseleave="open = false"
              class="absolute z-10 w-40 mt-1 origin-top-right bg-white rounded-md shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none"
              role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1"
              x-transition:enter="transition ease-out duration-100"
              x-transition:enter-start="transform opacity-0 scale-95"
              x-transition:enter-end="transform opacity-100 scale-100"
              x-transition:leave="transition ease-in duration-75"
              x-transition:leave-start="transform opacity-100 scale-100"
              x-transition:leave-end="transform opacity-0 scale-95">
              <div class="py-1" role="none">

                {{#each versions as |name version|}}
                  <a href="/docs/{{version}}/{{../currentPage}}"
                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-blueGray-100 hover:text-blue-800"
                    role="menuitem" tabindex="-1" id="menu-item-0">
                    {{name}}</a>
                {{/each}}
              </div>
            </div>
          </div>

          {{#each navigation as |value title|}}
            <h3 id="{{value.slug}}" class="pt-3 pr-3 mb-3 text-sm font-bold">{{title}}</h3>

            <ul class="mb-6 ml-3">
              {{#each value.sections as |slug title|}}
                <li
                  class="leading-6 {{#isEqual ../../currentPage slug}} border-b border-coolGray-100 font-bold {{/isEqual}}">
                  <a href="/docs/{{../../version}}/{{slug}}"
                    class="block px-2 py-1 mr-2 rounded hover:bg-blueGray-100 hover:text-blue-800">{{title}}</a>
                </li>
              {{/each}}
            </ul>
          {{/each}}
        </div>
      </div>

      <div class="col-span-3">
        <div class="absolute top-0 bottom-0 hidden w-8 bg-white lg:block -right-4"></div>

        <div class="relative py-16 lg:px-16">
          <div class="max-w-xl prose prose-md">

            {{{docsContent}}}

          </div>
        </div>
      </div>

    </div>
  </div>
</div>

