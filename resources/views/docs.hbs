<div class="px-4 mx-auto max-w-7xl">
  <div class="grid grid-cols-1 md:grid-cols-3 md:gap-4 lg:grid-cols-4 lg:gap-8">
    <div class="col-span-1 md:border-r border-slate-100">
      <div class="relative md:py-16 lg:pl-8">

        {{!-- navbar on small screens --}}
        <div class="block mt-8 md:hidden" x-data="{ showNavbar: false }">
          <button type="button" @click="showNavbar = !showNavbar"
            class="inline-flex justify-center w-full px-4 py-2 text-sm font-medium text-white bg-blue-600 border rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-slate-100 focus:ring-indigo-500"
            id="menu-button" aria-expanded="true" aria-haspopup="true">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24"
              stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>

            <span x-show="!showNavbar">Show docs navigation</span>
            <span x-show="showNavbar">Close docs navigation</span>

            <svg class="w-5 h-5 ml-2 -mr-1 caret" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"
              fill="currentColor" aria-hidden="true">
              <path fill-rule="evenodd"
                d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                clip-rule="evenodd" />
            </svg>
          </button>

          <div x-show="showNavbar" class="py-8">
            {{> docs/navbar }}
          </div>
        </div>

        {{!-- navbar on medium screens and larger --}}
        <div class="hidden md:block">
          {{> docs/navbar }}
        </div>
      </div>
    </div>

    <div class="col-span-1 md:col-span-2 lg:col-span-3">
      <div class="py-16 lg:px-16 md:px-8">
        <article class="max-w-2xl prose">

          {{{ docsContent }}}

        </article>
      </div>
    </div>

  </div>
</div>
