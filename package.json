{
  "name": "supercharge-homepage",
  "description": "Supercharge homepage",
  "version": "2.0.0",
  "dependencies": {
    "@supercharge/collections": "~3.2.1",
    "@supercharge/console": "~2.0.0-alpha.7",
    "@supercharge/contracts": "~2.0.0-alpha.7",
    "@supercharge/core": "~2.0.0-alpha.7",
    "@supercharge/facades": "~2.0.0-alpha.7",
    "@supercharge/fs": "~3.4.0",
    "@supercharge/goodies": "~1.10.0",
    "@supercharge/http": "~2.0.0-alpha.7",
    "@supercharge/routing": "~2.0.0-alpha.7",
    "@supercharge/strings": "~1.23.0",
    "@supercharge/view": "~2.0.0-alpha.7",
    "front-matter": "~4.0.2",
    "marked": "~3.0.7",
    "shiki": "~0.9.12"
  },
  "devDependencies": {
    "@supercharge/tsconfig": "~3.1.0",
    "@tailwindcss/custom-forms": "~0.2.1",
    "@tailwindcss/forms": "~0.4.0-alpha.2",
    "@tailwindcss/typography": "~0.5.0-alpha.3",
    "@tailwindcss/ui": "~0.7.2",
    "@types/marked": "~3.0.2",
    "@types/node": "~16.11.7",
    "@types/supertest": "~2.0.11",
    "@typescript-eslint/eslint-plugin": "~4.32.0",
    "autoprefixer": "~10.4.0",
    "c8": "~7.10.0",
    "concurrently": "~6.3.0",
    "eslint": "~7.32.0",
    "eslint-config-standard": "~16.0.3",
    "eslint-config-standard-with-typescript": "~21.0.1",
    "eslint-plugin-import": "~2.25.3",
    "eslint-plugin-node": "~11.1.0",
    "eslint-plugin-promise": "~5.1.1",
    "eslint-plugin-standard": "~4.1.0",
    "expect": "~27.3.1",
    "nodemon": "~2.0.15",
    "postcss": "~8.3.11",
    "postcss-cli": "~9.0.2",
    "supertest": "~6.1.6",
    "tailwindcss": "~3.0.0-alpha.2",
    "tailwindcss-textshadow": "~2.1.3",
    "ts-eager": "~2.0.2",
    "ts-node": "~10.4.0",
    "typescript": "~4.4.4",
    "uvu": "~0.5.2"
  },
  "engines": {
    "node": ">= 14"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "ts-eager server.ts",
    "dev": "concurrently \"npm run dev:css\" \"npm run dev:server\"",
    "dev:css": "npm run build:css -- --watch",
    "build:css": "postcss resources/css/app.css -o public/css/app.css",
    "dev:server": "nodemon --ext ts,js,hbs --exec 'ts-eager' server.ts",
    "prod": "npm run production",
    "production": "concurrently \"npm run prod:css\"",
    "prod:css": "NODE_ENV=production postcss resources/css/app.css -o public/css/app.css",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && npm run test:coverage",
    "test:run": "uvu -r ts-eager/register",
    "test:coverage": "c8 --include=dist npm run test:run && npm run test:report",
    "test:report": "c8 report --reporter=html"
  }
}
