{
  "name": "supercharge-homepage",
  "description": "Supercharge homepage",
  "version": "2.0.0",
  "dependencies": {
    "@supercharge/collections": "~4.3.0",
    "@supercharge/console": "~3.7.1",
    "@supercharge/contracts": "~3.7.1",
    "@supercharge/core": "~3.7.1",
    "@supercharge/facades": "~3.7.1",
    "@supercharge/fs": "~3.4.0",
    "@supercharge/goodies": "~1.11.1",
    "@supercharge/http": "~3.7.1",
    "@supercharge/routing": "~2.0.0-alpha.7",
    "@supercharge/strings": "~1.28.0",
    "@supercharge/view": "~3.7.1",
    "front-matter": "~4.0.2",
    "marked": "~4.0.19",
    "shiki": "~0.11.1"
  },
  "devDependencies": {
    "@supercharge/eslint-config-typescript": "~2.3.0",
    "@supercharge/tsconfig": "~4.0.0",
    "@swc-node/register": "~1.5.1",
    "@tailwindcss/forms": "~0.5.2",
    "@tailwindcss/typography": "~0.5.4",
    "@types/marked": "~4.0.6",
    "@types/node": "~18.7.11",
    "@types/supertest": "~2.0.12",
    "autoprefixer": "~10.4.8",
    "c8": "~7.12.0",
    "concurrently": "~7.3.0",
    "cssnano": "~5.1.13",
    "eslint": "~8.22.0",
    "expect": "~28.1.3",
    "nodemon": "~2.0.19",
    "postcss": "~8.4.16",
    "postcss-cli": "~10.0.0",
    "supertest": "~6.2.4",
    "tailwindcss": "~3.1.8",
    "tailwindcss-textshadow": "~2.1.3",
    "ts-node": "~10.9.1",
    "typescript": "~4.7.4",
    "uvu": "~0.5.6"
  },
  "engines": {
    "node": ">= 14"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node -r @swc-node/register server.ts",
    "dev": "concurrently \"npm run dev:tsc:check\" \"npm run dev:css\" \"npm run dev:server\"",
    "dev:css": "npm run build:css -- --watch",
    "build:css": "postcss resources/css/app.css -o public/css/app.css",
    "dev:server": "nodemon --ext ts,js,hbs --exec npm start",
    "prod": "npm run production",
    "production": "concurrently \"npm run prod:css\"",
    "prod:css": "NODE_ENV=production postcss resources/css/app.css -o public/css/app.css",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "tsc:check": "tsc --noEmit --skipLibCheck",
    "dev:tsc:check": "npm run tsc:check -- --watch",
    "test": "npm run lint && npm run test:run",
    "test:run": "c8 --include=dist uvu -r @swc-node/register",
    "posttest": "c8 report --reporter=html"
  }
}
